
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow read access to user profiles for anyone signed in
    match /users/{userId} {
      allow read, write: if isSignedIn();
    }

    // Rules for the 'requests' subcollection within each user document
    match /users/{userId}/requests/{requestId} {
      allow read, write: if isSignedIn();
    }
    
    // This rule is necessary to allow collection group queries on 'requests'
    match /{path=**}/requests/{requestId} {
      allow read: if isSignedIn();
    }

    // Rules for the 'solutions' subcollection
    match /users/{userId}/requests/{requestId}/solutions/{solutionId} {
       allow read, write: if isSignedIn();
    }
    
    // Security logs can be created by anyone (for failed login attempts)
    // and read by anyone for the demo. In production, this would be more secure.
    match /security_logs/{logId} {
      allow read, create: if true;
    }
  }
}

    