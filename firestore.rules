
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.uid == userId;
      allow update: if isOwner(userId);
    }

    match /requests/{requestId} {
      // Allow any signed-in user to read requests for the marketplace and detail view.
      allow read: if isSignedIn();
      
      // Allow users to create requests.
      allow create: if isSignedIn();
      
      // Only allow the original requester to update or delete their own request.
      allow update, delete: if isSignedIn() && resource.data.requesterId == request.auth.uid;
    }

    match /solutions/{solutionId} {
      // Allow any signed-in user to read solutions and create new ones.
      allow read, create: if isSignedIn();

      // Only allow the solution owner or request owner to update a solution (e.g. to accept it)
      allow update: if isSignedIn();
    }
    
    match /security_logs/{logId} {
      allow read, create: if true;
    }
  }
}
